{
  "compilerOptions": {
    "baseUrl": ".",                         // <- ðŸ”´ NECESARIO
    "paths": {
      "@/*": ["./resources/js/*"],            // <- âœ… ALIAS FUNCIONAL
      "@sass/*": ["resources/sass/*"]
    },
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "node",             // <- ðŸ”´ CAMBIA esto si aÃºn es "bundler"
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.d.ts"
  ]
}
